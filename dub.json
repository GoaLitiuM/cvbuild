{
	"name": "cvbuild",
	"authors": [ "Ari Vuollet" ],
	"copyright": "Copyright Â© 2019, Ari Vuollet",
	"description": "A minimal D application.",
	"license": "proprietary",

	"dependencies": {
		"asdf": "~>0.5.2",
		"sdlang-d": "~>0.10.5",
		"taggedalgebraic": "~>0.11.9",
		"dmd": "~master"
	},

	"dflags-ldc": [
		"-mattr=+sse4.2",
		"-gc"
	],

	"buildRequirements": ["allowWarnings"],

	"buildTypes": {
		"debug": {
			"buildOptions": ["debugMode", "debugInfo", "alwaysStackFrame" ],
			"dflags-windows": [
				"-mscrtlib=msvcrt"
			],
			"lflags-windows": [
				"/NODEFAULTLIB:LIBCMTD",
				"/NODEFAULTLIB:LIBCMT",
				"/NODEFAULTLIB:libvcruntime",
				"/DEBUG",
				"/INCREMENTAL:NO"
			]
		}
	}
}
